<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AkilliHatirlatici.HatirlaticiEklePage"
             Title="Hatırlatıcı Ekle">
    <StackLayout Padding="20" Spacing="15">
        <Entry x:Name="titleEntry" Placeholder="Başlık girin" />
        <Entry x:Name="descEntry" Placeholder="Açıklama girin" />
        <DatePicker x:Name="datePicker" />
        <TimePicker x:Name="timePicker" />
        <Button Text="Ekle" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>
